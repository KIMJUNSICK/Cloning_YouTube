mixin videoPlayer(video= {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span#jsRunningTime 
                    span#currentTime 00:00:00
                    span / 
                    span#totalTime 00:00:00
                input.videoPlayer__volume#jsVolumeBar(type="range", min="0", max="1", step="0.1" value="0.5")
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span#jsScreenButton
                    i.fas.fa-expand